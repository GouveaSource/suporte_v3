generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COMUM
  ADMIN
  ADMMaster
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  nome          String
  password_hash String
  role          Role     @default(COMUM)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model RevokedToken {
  id Int @id @default(autoincrement())

  jti String @unique
  revokedAt DateTime @default(now()) // <--- CORREÇÃO AQUI

  @@map("revoked_tokens")
}